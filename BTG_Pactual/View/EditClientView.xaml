<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BTG_Pactual.View.EditClientView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="clr-namespace:BTG_Pactual.ViewModel"
    Title="Editar Cliente"
    x:DataType="mvvm:EditClientViewModel">

    <StackLayout>
        <Label Text="Nome do Cliente" />

        <Entry Text="{Binding Name}" />

        <Label Text="Último Nome do Cliente" />

        <Entry Text="{Binding LastName}"/>

        <Label Text="Idade do Cliente"/>

        <Entry Text="{Binding Age}"/>

        <Label Text="Endereço do Cliente"/>

        <Entry Text="{Binding Address}"/>

        <Grid ColumnDefinitions="*,*" VerticalOptions="EndAndExpand" ColumnSpacing="5" Padding="5">
            <Button Text="Excluir" BackgroundColor="Red" TextColor="White" Grid.Column="0" Command="{Binding DeleteClientCommand}"/>

            <Button Text="Alterar" BackgroundColor="#0E0C5A" TextColor="White" Grid.Column="1" Command="{Binding UpdateClientCommand}"/>
        </Grid>
    </StackLayout>

</ContentPage>